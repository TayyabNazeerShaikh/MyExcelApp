<!-- Views/Excel/Index.cshtml -->
@model List<ExcelData>
@{
    ViewData["Title"] = "Uploaded Excel Files";
    Layout = "_Layout";
}

<h2>Uploaded Excel Files</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-info">@TempData["Message"]</div>
}

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>File Name</th>
            <th>Sheet Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var excelData in Model)
        {
            <tr>
                <td>@excelData.Id</td>
                <td>@excelData.FileName</td>
                <td>@excelData.SheetName</td>
                <td>
                    <a asp-action="Export" asp-route-id="@excelData.Id" class="btn btn-success">Export</a>
                </td>
            </tr>
        }
    </tbody>
</table>
